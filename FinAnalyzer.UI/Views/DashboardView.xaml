<UserControl x:Class="FinAnalyzer.UI.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FinAnalyzer.UI.Views"
             xmlns:vm="clr-namespace:FinAnalyzer.UI.ViewModels"
             xmlns:models="clr-namespace:FinAnalyzer.UI.Models"
             d:DataContext="{d:DesignInstance Type=vm:DashboardViewModel}"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel>
            <!-- System Health Section -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="System Health" 
                           FontSize="18" FontWeight="SemiBold" 
                           Foreground="{StaticResource TextPrimaryBrush}" />
                <Border Grid.Column="1" Background="#1A10B981" CornerRadius="12" Padding="10,5">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="8" Height="8" Fill="{StaticResource AccentSuccessBrush}" Margin="0,0,6,0" />
                        <TextBlock Text="Air-Gapped" FontSize="12" FontWeight="Medium" 
                                   Foreground="{StaticResource AccentSuccessBrush}" />
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Service Health Cards -->
            <UniformGrid Columns="2" Margin="0,0,0,32">
                <!-- Qdrant Card -->
                <Border Style="{StaticResource CardBorder}" Margin="0,0,12,12">
                    <StackPanel>
                        <TextBlock Text="Vector DB" FontSize="11" Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,4" />
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Qdrant" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" />
                            <TextBlock Text="Ready" Margin="8,0,0,0" VerticalAlignment="Bottom" FontSize="12" FontWeight="Medium" Foreground="{StaticResource TextMutedBrush}" />
                        </StackPanel>
                        <Border Background="{StaticResource BorderDarkBrush}" CornerRadius="2" Height="4">
                            <Border Background="{StaticResource TextMutedBrush}" CornerRadius="2" HorizontalAlignment="Stretch" />
                        </Border>
                    </StackPanel>
                </Border>
                <!-- Ollama Card -->
                <Border Style="{StaticResource CardBorder}" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="LLM Backend" FontSize="11" Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,4" />
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Ollama" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" />
                            <TextBlock Text="Ready" Margin="8,0,0,0" VerticalAlignment="Bottom" FontSize="12" FontWeight="Medium" Foreground="{StaticResource TextMutedBrush}" />
                        </StackPanel>
                        <Border Background="{StaticResource BorderDarkBrush}" CornerRadius="2" Height="4">
                            <Border Background="{StaticResource TextMutedBrush}" CornerRadius="2" HorizontalAlignment="Stretch" />
                        </Border>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Pipeline Status Section -->
            <Border Style="{StaticResource CardBorder}" Margin="0,0,0,32">
                <StackPanel>
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“Š" FontSize="16" Margin="0,0,8,0" />
                            <TextBlock Text="Pipeline Status" FontSize="16" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextPrimaryBrush}" />
                        </StackPanel>
                        <TextBlock Grid.Column="1" Text="{Binding LastPipelineRun, StringFormat='Last run: {0}'}" 
                                   FontSize="12" Foreground="{StaticResource TextMutedBrush}" />
                    </Grid>

                    <ItemsControl ItemsSource="{Binding PipelineSteps}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:PipelineStep}">
                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="48" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Border Width="36" Height="36" CornerRadius="18" Background="#1A10B981">
                                        <TextBlock Text="{Binding Icon}" FontSize="14" 
                                                   HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                    <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" FontSize="13" FontWeight="Medium" 
                                                   Foreground="{StaticResource TextPrimaryBrush}" />
                                        <TextBlock Text="{Binding Description}" FontSize="11" 
                                                   Foreground="{StaticResource TextMutedBrush}" Margin="0,2,0,0" />
                                    </StackPanel>
                                    <TextBlock Grid.Column="2" Text="Done" VerticalAlignment="Center" FontSize="12" FontWeight="SemiBold"
                                               Foreground="{StaticResource AccentSuccessBrush}" />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Empty State -->
                    <TextBlock Text="No pipeline activity yet. Ingest a document to start."
                               FontSize="12" Foreground="{StaticResource TextMutedBrush}"
                               HorizontalAlignment="Center" Margin="0,16,0,0"
                               Visibility="{Binding PipelineSteps.Count, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=Invert}" />
                </StackPanel>
            </Border>

            <!-- Recent Reports Section -->
            <TextBlock Text="Recent Reports" FontSize="18" FontWeight="SemiBold" 
                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,16" />

            <ItemsControl ItemsSource="{Binding RecentReports}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:DocumentItem}">
                        <Border Style="{StaticResource CardBorder}" Margin="0,0,0,12" Padding="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="48" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Border Width="44" Height="44" CornerRadius="10" Background="#1ADC2626">
                                    <TextBlock Text="ðŸ“„" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding FileName}" FontSize="13" FontWeight="SemiBold" 
                                               Foreground="{StaticResource TextPrimaryBrush}" TextTrimming="CharacterEllipsis" />
                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                        <Border Background="{StaticResource BorderDarkBrush}" CornerRadius="4" Padding="6,2">
                                            <TextBlock Text="{Binding FileType}" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" />
                                        </Border>
                                        <TextBlock Text="â€¢ Indexed" Margin="8,0,0,0" FontSize="11" 
                                                   Foreground="{StaticResource TextMutedBrush}" VerticalAlignment="Center" />
                                    </StackPanel>
                                </StackPanel>
                                <TextBlock Grid.Column="2" Text="â€º" FontSize="24" 
                                           Foreground="{StaticResource TextMutedBrush}" VerticalAlignment="Center" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Empty State for Reports -->
            <Border Style="{StaticResource CardBorder}" Padding="24"
                    Visibility="{Binding RecentReports.Count, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=Invert}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ“" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,12" />
                    <TextBlock Text="No documents yet" FontSize="14" FontWeight="SemiBold" 
                               Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center" />
                    <TextBlock Text="Upload a PDF to get started" FontSize="12" 
                               Foreground="{StaticResource TextMutedBrush}" HorizontalAlignment="Center" Margin="0,4,0,0" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
