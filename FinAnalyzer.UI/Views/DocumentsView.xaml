<UserControl x:Class="FinAnalyzer.UI.Views.DocumentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FinAnalyzer.UI.Views"
             xmlns:vm="clr-namespace:FinAnalyzer.UI.ViewModels"
             xmlns:models="clr-namespace:FinAnalyzer.UI.Models"
             d:DataContext="{d:DesignInstance Type=vm:DocumentsViewModel}"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             AllowDrop="True" Drop="UserControl_Drop">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Margin="24,24,24,16">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                <Border Width="40" Height="40" CornerRadius="10" Background="#1A2563EB" Margin="0,0,12,0">
                    <TextBlock Text="ðŸ“" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Document Repository" FontSize="20" FontWeight="Bold" 
                               Foreground="{StaticResource TextPrimaryBrush}" />
                    <TextBlock Text="Enterprise Secure Storage â€¢ 0KB Egress" FontSize="11" 
                               Foreground="{StaticResource TextMutedBrush}" />
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!-- Search Bar -->
        <Grid Grid.Row="1" Margin="24,0,24,16">
            <TextBox Style="{StaticResource ModernTextBox}" 
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     Padding="40,12,12,12" />
            <TextBlock Text="ðŸ”" FontSize="14" Margin="14,0,0,0" 
                       VerticalAlignment="Center" HorizontalAlignment="Left" IsHitTestVisible="False" />
        </Grid>

        <!-- Stats Cards -->
        <Grid Grid.Row="2" Margin="24,0,24,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="12" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Style="{StaticResource CardBorder}">
                <StackPanel>
                    <Grid Margin="0,0,0,8">
                        <TextBlock Text="Ingested" FontSize="11" Foreground="{StaticResource TextMutedBrush}" />
                        <TextBlock Text="âœ“" FontSize="14" Foreground="{StaticResource AccentSuccessBrush}" HorizontalAlignment="Right" />
                    </Grid>
                    <TextBlock Text="{Binding IngestedCount, StringFormat='{}{0:N0}'}" 
                               FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" />
                    <TextBlock Text="documents indexed" FontSize="11" Foreground="{StaticResource TextMutedBrush}" Margin="0,4,0,0" />
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Style="{StaticResource CardBorder}">
                <StackPanel>
                    <Grid Margin="0,0,0,8">
                        <TextBlock Text="Pending" FontSize="11" Foreground="{StaticResource TextMutedBrush}" />
                        <TextBlock Text="â³" FontSize="14" Foreground="{StaticResource AccentWarningBrush}" HorizontalAlignment="Right" />
                    </Grid>
                    <TextBlock Text="{Binding PendingCount}" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" />
                    <TextBlock Text="processing locally" FontSize="11" Foreground="{StaticResource TextMutedBrush}" Margin="0,4,0,0" />
                </StackPanel>
            </Border>
        </Grid>

        <!-- Document List -->
        <ScrollViewer Grid.Row="3" Padding="24,0">
            <StackPanel>
                <TextBlock Text="DOCUMENTS" FontSize="11" FontWeight="SemiBold" 
                           Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,12" />

                <ItemsControl ItemsSource="{Binding Documents}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type models:DocumentItem}">
                            <Border Style="{StaticResource CardBorder}" Margin="0,0,0,12" Padding="0">
                                <Grid>
                                    <!-- Status Bar -->
                                    <Border Width="4" HorizontalAlignment="Left" CornerRadius="4,0,0,4">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="{StaticResource AccentSuccessBrush}" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Processing">
                                                        <Setter Property="Background" Value="{StaticResource AccentWarningBrush}" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Error">
                                                        <Setter Property="Background" Value="{StaticResource AccentDangerBrush}" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>
                                    <StackPanel Margin="20,16,16,16">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="44" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Border Width="40" Height="40" CornerRadius="10" Background="#1ADC2626">
                                                <TextBlock Text="ðŸ“„" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Border>
                                            <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                                <TextBlock Text="{Binding FileName}" FontSize="13" FontWeight="SemiBold" 
                                                           Foreground="{StaticResource TextPrimaryBrush}" TextTrimming="CharacterEllipsis" />
                                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                    <Border Background="{StaticResource BorderDarkBrush}" CornerRadius="4" Padding="6,2">
                                                        <TextBlock Text="{Binding FileType}" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" />
                                                    </Border>
                                                    <TextBlock Text="{Binding FileSize, StringFormat='â€¢ {0}'}" FontSize="10" 
                                                               Foreground="{StaticResource TextMutedBrush}" Margin="8,0,0,0" VerticalAlignment="Center" />
                                                </StackPanel>
                                            </StackPanel>
                                            <!-- Cancel Button (visible when processing) -->
                                            <Button Grid.Column="2" Command="{Binding DataContext.CancelIngestionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    Visibility="{Binding Status, Converter={StaticResource StringToVisibilityConverter}}" Cursor="Hand">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Processing">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="border" Background="Transparent" CornerRadius="4" Padding="8,4">
                                                            <TextBlock Text="âœ• Cancel" FontSize="11" Foreground="{StaticResource TextMutedBrush}" />
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="border" Property="Background" Value="{StaticResource BorderDarkBrush}" />
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </Grid>
                                        
                                        <!-- Progress Bar (visible when processing) -->
                                        <ProgressBar Value="{Binding Progress}" Minimum="0" Maximum="100" Height="4" 
                                                     Margin="0,12,0,0" Background="{StaticResource BorderDarkBrush}" 
                                                     Foreground="{StaticResource AccentSuccessBrush}">
                                            <ProgressBar.Style>
                                                <Style TargetType="ProgressBar">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Processing">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ProgressBar.Style>
                                        </ProgressBar>
                                        
                                        <!-- Status Footer -->
                                        <Border BorderThickness="0,1,0,0" BorderBrush="{StaticResource BorderDarkBrush}" Margin="0,12,0,0" Padding="0,12,0,0">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Processing">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <Grid>
                                                <TextBlock FontSize="12">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="âœ“ Ingested" />
                                                            <Setter Property="Foreground" Value="{StaticResource AccentSuccessBrush}" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="Error">
                                                                    <Setter Property="Text" Value="âœ— Error" />
                                                                    <Setter Property="Foreground" Value="{StaticResource AccentDangerBrush}" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBlock Text="{Binding LastModified, StringFormat='{}{0:MMM dd, HH:mm}'}" 
                                                           FontSize="10" Foreground="{StaticResource TextMutedBrush}" HorizontalAlignment="Right" />
                                            </Grid>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Empty State -->
                <Border Style="{StaticResource CardBorder}" Padding="32"
                        Visibility="{Binding Documents.Count, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=Invert}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ“„" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16" />
                        <TextBlock Text="No documents yet" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center" />
                        <TextBlock Text="Click the + button to upload a PDF" FontSize="13" 
                                   Foreground="{StaticResource TextMutedBrush}" HorizontalAlignment="Center" Margin="0,8,0,0" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- FAB Button -->
        <Button Grid.Row="3" Width="56" Height="56" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Margin="0,0,24,24" Command="{Binding AddDocumentCommand}">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{StaticResource PrimaryBlueBrush}" CornerRadius="28">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="3" Color="#2563EB" Opacity="0.4" />
                        </Border.Effect>
                        <TextBlock Text="+" FontSize="28" FontWeight="Light" Foreground="White" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</UserControl>
