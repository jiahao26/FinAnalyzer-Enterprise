<UserControl x:Class="FinAnalyzer.UI.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FinAnalyzer.UI.Views"
             xmlns:vm="clr-namespace:FinAnalyzer.UI.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:SettingsViewModel}"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel MaxWidth="600">
            <!-- Header -->
            <StackPanel Margin="0,0,0,32">
                <TextBlock Text="Settings" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" />
                <TextBlock Text="Configure Docker service endpoints and AI models" FontSize="13" 
                           Foreground="{StaticResource TextMutedBrush}" Margin="0,4,0,0" />
            </StackPanel>

            <!-- Vector Database Section -->
            <Border Style="{StaticResource CardBorder}" Margin="0,0,0,16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <Border Width="36" Height="36" CornerRadius="8" Background="#1A2563EB" Margin="0,0,12,0">
                            <TextBlock Text="ðŸ—„ï¸" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Vector Database" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" />
                            <TextBlock Text="Qdrant Configuration" FontSize="11" Foreground="{StaticResource TextMutedBrush}" />
                        </StackPanel>
                    </StackPanel>
                    <TextBlock Text="Qdrant URL" FontSize="12" FontWeight="Medium" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8" />
                    <TextBox Style="{StaticResource ModernTextBox}" Text="{Binding QdrantUrl, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
            </Border>

            <!-- LLM Backend Section -->
            <Border Style="{StaticResource CardBorder}" Margin="0,0,0,16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <Border Width="36" Height="36" CornerRadius="8" Background="#1A10B981" Margin="0,0,12,0">
                            <TextBlock Text="ðŸ§ " FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="LLM Backend" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" />
                            <TextBlock Text="Ollama Configuration" FontSize="11" Foreground="{StaticResource TextMutedBrush}" />
                        </StackPanel>
                    </StackPanel>
                    <TextBlock Text="Ollama Endpoint" FontSize="12" FontWeight="Medium" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8" />
                    <TextBox Style="{StaticResource ModernTextBox}" Text="{Binding OllamaEndpoint, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,16" />
                    <TextBlock Text="Model Name" FontSize="12" FontWeight="Medium" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8" />
                    <TextBox Style="{StaticResource ModernTextBox}" Text="{Binding OllamaModelName, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
            </Border>

            <!-- Reranker Section -->
            <Border Style="{StaticResource CardBorder}" Margin="0,0,0,16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <Border Width="36" Height="36" CornerRadius="8" Background="#1AF59E0B" Margin="0,0,12,0">
                            <TextBlock Text="ðŸ”€" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Reranker Service" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" />
                            <TextBlock Text="TEI Configuration" FontSize="11" Foreground="{StaticResource TextMutedBrush}" />
                        </StackPanel>
                    </StackPanel>
                    <TextBlock Text="TEI Reranker Endpoint" FontSize="12" FontWeight="Medium" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8" />
                    <TextBox Style="{StaticResource ModernTextBox}" Text="{Binding TeiRerankerEndpoint, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
            </Border>

            <!-- Embedding Section -->
            <Border Style="{StaticResource CardBorder}" Margin="0,0,0,24">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <Border Width="36" Height="36" CornerRadius="8" Background="#1A8B5CF6" Margin="0,0,12,0">
                            <TextBlock Text="ðŸ“Š" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Embedding Model" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" />
                            <TextBlock Text="Vector generation" FontSize="11" Foreground="{StaticResource TextMutedBrush}" />
                        </StackPanel>
                    </StackPanel>
                    <TextBlock Text="Embedding Model Name" FontSize="12" FontWeight="Medium" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8" />
                    <TextBox Style="{StaticResource ModernTextBox}" Text="{Binding EmbeddingModelName, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
            </Border>

            <!-- Service Status Section -->
            <Border Style="{StaticResource CardBorder}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="SERVICE STATUS" FontSize="11" FontWeight="SemiBold" 
                               Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,12" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        
                        <!-- Qdrant Status -->
                        <StackPanel HorizontalAlignment="Center">
                            <Ellipse Width="12" Height="12" HorizontalAlignment="Center" Margin="0,0,0,6">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="{StaticResource TextMutedBrush}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding QdrantOnline}" Value="True">
                                                <Setter Property="Fill" Value="{StaticResource AccentSuccessBrush}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="Qdrant" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center" />
                        </StackPanel>
                        
                        <!-- Ollama Status -->
                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <Ellipse Width="12" Height="12" HorizontalAlignment="Center" Margin="0,0,0,6">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="{StaticResource TextMutedBrush}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding OllamaOnline}" Value="True">
                                                <Setter Property="Fill" Value="{StaticResource AccentSuccessBrush}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="Ollama" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center" />
                        </StackPanel>
                        
                        <!-- TEI Status -->
                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <Ellipse Width="12" Height="12" HorizontalAlignment="Center" Margin="0,0,0,6">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="{StaticResource TextMutedBrush}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding TeiOnline}" Value="True">
                                                <Setter Property="Fill" Value="{StaticResource AccentSuccessBrush}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="TEI" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Connection Test Result -->
            <Border Background="{StaticResource SurfaceDarkBrush}" CornerRadius="8" Padding="16" Margin="0,0,0,16"
                    Visibility="{Binding ConnectionTestResult, Converter={StaticResource StringToVisibilityConverter}}">
                <TextBlock Text="{Binding ConnectionTestResult}" FontSize="12" FontFamily="Consolas"
                           Foreground="{StaticResource TextSecondaryBrush}" TextWrapping="Wrap" />
            </Border>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Style="{StaticResource PrimaryButton}" Content="Test Connection" 
                        Command="{Binding TestConnectionCommand}" Margin="0,0,12,0" Padding="24,12"
                        IsEnabled="{Binding IsTestingConnection, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}" />
                <Button Command="{Binding StartDockerServicesCommand}" Padding="24,12" Margin="0,0,12,0"
                        IsEnabled="{Binding IsTestingConnection, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="#1A10B981" 
                                    BorderBrush="{StaticResource AccentSuccessBrush}" BorderThickness="1" 
                                    CornerRadius="8" Padding="{TemplateBinding Padding}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ³" FontSize="14" Margin="0,0,8,0" />
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#3310B981" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Content>Start Docker</Button.Content>
                    <Button.Foreground>
                        <SolidColorBrush Color="{StaticResource AccentSuccess}" />
                    </Button.Foreground>
                </Button>
                
                <Button Command="{Binding ResetDatabaseCommand}" Padding="24,12" Margin="0,0,12,0"
                        IsEnabled="{Binding IsTestingConnection, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="#1AEF4444" 
                                    BorderBrush="{StaticResource AccentDangerBrush}" BorderThickness="1" 
                                    CornerRadius="8" Padding="{TemplateBinding Padding}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ—‘ï¸" FontSize="14" Margin="0,0,8,0" />
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#33EF4444" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Content>Reset DB</Button.Content>
                    <Button.Foreground>
                        <SolidColorBrush Color="{StaticResource AccentDanger}" />
                    </Button.Foreground>
                </Button>

                <Button Content="Save Settings" Command="{Binding SaveSettingsCommand}" Padding="24,12">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{StaticResource SurfaceDarkHoverBrush}" 
                                    BorderBrush="{StaticResource BorderDarkBrush}" BorderThickness="1" 
                                    CornerRadius="8" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource BorderDarkBrush}" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Foreground>
                        <SolidColorBrush Color="{StaticResource TextPrimary}" />
                    </Button.Foreground>
                </Button>
            </StackPanel>

            <!-- Info Note -->
            <Border Background="#1A2563EB" CornerRadius="8" Padding="16" Margin="0,24,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="â„¹ï¸" FontSize="14" Margin="0,0,12,0" VerticalAlignment="Top" />
                    <TextBlock FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" TextWrapping="Wrap">
                        <Run Text="All services run locally in Docker containers. Ensure " />
                        <Run Text="docker-compose up" FontFamily="Consolas" Foreground="{StaticResource PrimaryBlueBrush}" />
                        <Run Text=" is running before testing connections." />
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
