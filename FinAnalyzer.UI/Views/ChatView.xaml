<UserControl x:Class="FinAnalyzer.UI.Views.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FinAnalyzer.UI.Views"
             xmlns:vm="clr-namespace:FinAnalyzer.UI.ViewModels"
             xmlns:models="clr-namespace:FinAnalyzer.UI.Models"
             d:DataContext="{d:DesignInstance Type=vm:ChatViewModel}"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="{StaticResource SurfaceDarkBrush}" 
                BorderBrush="{StaticResource BorderDarkBrush}" BorderThickness="0,0,0,1" Padding="24,16">
            <StackPanel Orientation="Horizontal">
                <Border Width="32" Height="32" CornerRadius="6" Background="#1A10B981" Margin="0,0,12,0">
                    <TextBlock Text="ðŸ›¡ï¸" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="FinAnalyzer" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" />
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="6" Height="6" Fill="{StaticResource AccentSuccessBrush}" Margin="0,0,6,0" />
                        <TextBlock Text="AIR-GAPPED â€¢ SECURE" FontSize="9" Foreground="{StaticResource TextMutedBrush}" FontFamily="Consolas" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Analysis Parameters Bar -->
        <Border Grid.Row="1" Background="{StaticResource SurfaceDarkBrush}" 
                BorderBrush="{StaticResource BorderDarkBrush}" BorderThickness="0,0,0,1" Padding="24,12">
            <StackPanel Orientation="Horizontal">
                <Border Background="{StaticResource BorderDarkBrush}" CornerRadius="6" Padding="10,6" Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ’¾" FontSize="11" Margin="0,0,6,0" />
                        <TextBlock Text="{Binding SelectedModel}" FontSize="12" FontWeight="Medium" Foreground="{StaticResource TextPrimaryBrush}" />
                    </StackPanel>
                </Border>
                <Border Background="{StaticResource BorderDarkBrush}" CornerRadius="6" Padding="10,6" Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“„" FontSize="11" Margin="0,0,6,0" />
                        <TextBlock Text="{Binding SelectedCorpus}" FontSize="12" FontWeight="Medium" Foreground="{StaticResource TextPrimaryBrush}" />
                    </StackPanel>
                </Border>
                <Border Background="{StaticResource BorderDarkBrush}" CornerRadius="6" Padding="10,6">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ”’" FontSize="11" Margin="0,0,6,0" />
                        <TextBlock Text="Zero Egress" FontSize="12" FontWeight="Medium" Foreground="{StaticResource AccentWarningBrush}" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Messages Area -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="24,16">
            <ItemsControl ItemsSource="{Binding Messages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:ChatMessage}">
                        <StackPanel Margin="0,0,0,24">
                            <!-- User Message -->
                            <StackPanel HorizontalAlignment="Right" MaxWidth="500"
                                        Visibility="{Binding IsUser, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Border Background="#1A10B981" BorderBrush="#3310B981" BorderThickness="1" 
                                        CornerRadius="16,16,4,16" Padding="16,12">
                                    <TextBlock Text="{Binding Content}" FontSize="13" 
                                               Foreground="{StaticResource TextPrimaryBrush}" TextWrapping="Wrap" />
                                </Border>
                                <TextBlock Text="{Binding Timestamp, StringFormat='You â€¢ {0:h:mm tt}'}" 
                                           FontSize="10" Foreground="{StaticResource TextMutedBrush}" HorizontalAlignment="Right" Margin="0,4,0,0" />
                            </StackPanel>

                            <!-- AI Message -->
                            <StackPanel Visibility="{Binding IsUser, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <Border Width="24" Height="24" CornerRadius="4" Background="#6366F1" Margin="0,0,8,0">
                                        <TextBlock Text="ðŸ¤–" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                    <TextBlock Text="FinAnalyzer Core" FontSize="12" FontWeight="Bold" 
                                               Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center" />
                                </StackPanel>

                                <Border Background="{StaticResource SurfaceDarkBrush}" 
                                        BorderBrush="{StaticResource BorderDarkBrush}" BorderThickness="1" 
                                        CornerRadius="4,16,16,16" Padding="16" MaxWidth="600" HorizontalAlignment="Left">
                                    <TextBlock Text="{Binding Content}" FontSize="13" 
                                               Foreground="{StaticResource TextSecondaryBrush}" TextWrapping="Wrap" LineHeight="22" />
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Input Area -->
        <Border Grid.Row="3" Background="{StaticResource SurfaceDarkBrush}" 
                BorderBrush="{StaticResource BorderDarkBrush}" BorderThickness="0,1,0,0" Padding="24,16">
            <StackPanel>
                <!-- Input Row -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="8" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="8" />
                        <ColumnDefinition Width="44" />
                    </Grid.ColumnDefinitions>

                    <!-- Document Picker Button -->
                    <Button Width="44" Height="44" Command="{Binding ToggleDocumentPickerCommand}"
                            ToolTip="Select document to reference">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{StaticResource BorderDarkBrush}" CornerRadius="12">
                                    <TextBlock Text="ðŸ“„" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="{StaticResource SurfaceDarkHoverBrush}" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Input Box with Selected Doc Chip -->
                    <Border Grid.Column="2" Background="{StaticResource BackgroundDarkBrush}" BorderBrush="{StaticResource BorderDarkBrush}" 
                            BorderThickness="1" CornerRadius="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            
                            <!-- Selected Document Chip -->
                            <Border Background="#1A10B981" CornerRadius="8" Padding="8,4" Margin="8,0,0,0" VerticalAlignment="Center"
                                    Visibility="{Binding SelectedDocument, Converter={StaticResource StringToVisibilityConverter}}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ“Ž" FontSize="10" Margin="0,0,4,0" VerticalAlignment="Center" />
                                    <TextBlock Text="{Binding SelectedDocument.FileName}" FontSize="11" 
                                               Foreground="{StaticResource AccentSuccessBrush}" VerticalAlignment="Center" MaxWidth="150" TextTrimming="CharacterEllipsis" />
                                    <Button Command="{Binding ClearSelectedDocumentCommand}" Margin="6,0,0,0" Cursor="Hand">
                                        <Button.Template>
                                            <ControlTemplate>
                                                <TextBlock Text="âœ•" FontSize="10" Foreground="{StaticResource TextMutedBrush}" />
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </StackPanel>
                            </Border>
                            
                            <TextBox Grid.Column="1" x:Name="InputTextBox"
                                     Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}" 
                                     Background="Transparent" BorderThickness="0" 
                                     Foreground="{StaticResource TextPrimaryBrush}" FontSize="13" Padding="12,12" 
                                     VerticalAlignment="Center" CaretBrush="{StaticResource TextPrimaryBrush}"
                                     KeyDown="InputTextBox_KeyDown" />
                        </Grid>
                    </Border>

                    <Button Grid.Column="4" Width="44" Height="44" Command="{Binding SendMessageCommand}"
                            IsEnabled="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{StaticResource AccentSuccessBrush}" CornerRadius="12">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="12" ShadowDepth="2" Color="#10B981" Opacity="0.3" />
                                    </Border.Effect>
                                    <TextBlock Text="âž¤" FontSize="16" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <!-- Document Picker Popup -->
                <Border Background="{StaticResource SurfaceDarkBrush}" BorderBrush="{StaticResource BorderDarkBrush}" 
                        BorderThickness="1" CornerRadius="8" Padding="8" Margin="0,8,0,0"
                        Visibility="{Binding IsDocumentPickerOpen, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="SELECT DOCUMENT" FontSize="10" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextMutedBrush}" Margin="4,0,0,8" />
                        <ItemsControl ItemsSource="{Binding AvailableDocuments}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding DataContext.SelectDocumentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}" Margin="0,0,0,4" HorizontalAlignment="Stretch">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border" Background="Transparent" CornerRadius="6" Padding="8,6">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="ðŸ“„" FontSize="12" Margin="0,0,8,0" />
                                                        <TextBlock Text="{Binding FileName}" FontSize="12" 
                                                                   Foreground="{StaticResource TextPrimaryBrush}" />
                                                    </StackPanel>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="{StaticResource BorderDarkBrush}" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <TextBlock Text="No documents available. Upload in Documents tab." FontSize="11" 
                                   Foreground="{StaticResource TextMutedBrush}" Margin="4,4,0,0"
                                   Visibility="{Binding HasDocuments, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}" />
                    </StackPanel>
                </Border>

                <!-- Security Footer -->
                <TextBlock HorizontalAlignment="Center" Margin="0,12,0,0" FontSize="9" Foreground="{StaticResource TextMutedBrush}">
                    <Run Text="ðŸ”’" />
                    <Run Text="Encrypted â€¢ Local Processing â€¢ No Cloud Egress" />
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
