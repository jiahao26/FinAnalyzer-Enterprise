<Application x:Class="FinAnalyzer.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FinAnalyzer.UI"
             xmlns:converters="clr-namespace:FinAnalyzer.UI.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/DarkTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Global Converters -->
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
            <converters:CollectionToVisibilityConverter x:Key="CollectionToVisibilityConverter"/>
            <converters:NavIndexConverter x:Key="NavIndexConverter"/>
            <converters:ProcessingStatusToVisibilityConverter x:Key="ProcessingStatusToVisibilityConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
